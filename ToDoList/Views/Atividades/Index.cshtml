@model List<AtividadesModel>
@{
    ViewData["Title"] = "Listagem das atividades";
}

<div class="text-center">
  
    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-success btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    
    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    
    <h1 class="display-5"> Listagem de Atividades </h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col"> - </th>
                <th scope="col"> Tipo </th>
                <th scope="col"> Disciplina </th>
                <th scope="col"> Data limite </th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(AtividadesModel atividade in Model)
                {
                    <tr>
                        <th scope="row">@atividade.Id</th>
                        <td> @atividade.Tipo </td>
                        <td> @atividade.Disciplina </td>
                        <td> @atividade.Data </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary m-1" asp-route-id="@atividade.Id" style="border-radius:15%" asp-controller="Atividades" asp-action="Editar"> Editar </a>
                                <a role="button" class="btn btn-outline-danger m-1" asp-route-id="@atividade.Id" style="border-radius:15%" asp-controller="Atividades" asp-action="Apagar"> Apagar </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <br/>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-success" role="button" asp-controller="Atividades" asp-action="Criar"> Adicionar nova atividade </a>
    </div>
</div>


